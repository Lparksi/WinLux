{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WinLux",
  "version": "0.1.0",
  "identifier": "com.winlux.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WinLux",
        "width": 560,
        "height": 420,
        "minWidth": 420,
        "minHeight": 340,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
