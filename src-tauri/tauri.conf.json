{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WinLux",
  "version": "0.0.1",
  "identifier": "com.winlux.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "WinLux",
        "create": false,
        "width": 920,
        "height": 720,
        "minWidth": 760,
        "minHeight": 560,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "windows": {
      "nsis": {
        "template": "./nsis/installer-template.nsi",
        "installerHooks": "./nsis/installer-hooks.nsh",
        "languages": [
          "English",
          "SimpChinese",
          "TradChinese",
          "Japanese",
          "Korean",
          "Thai",
          "Vietnamese",
          "Indonesian",
          "French",
          "German",
          "Italian",
          "Spanish",
          "SpanishInternational",
          "Portuguese",
          "PortugueseBR",
          "Russian",
          "Polish",
          "Turkish",
          "Ukrainian",
          "Czech",
          "Hungarian",
          "Greek",
          "Bulgarian",
          "Romanian",
          "Arabic",
          "Dutch",
          "Danish",
          "Finnish",
          "Norwegian",
          "Swedish"
        ],
        "displayLanguageSelector": true
      }
    },
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/icon.ico",
      "icons/StoreLogo.png",
      "icons/Square30x30Logo.png",
      "icons/Square44x44Logo.png",
      "icons/Square71x71Logo.png",
      "icons/Square89x89Logo.png",
      "icons/Square107x107Logo.png",
      "icons/Square142x142Logo.png",
      "icons/Square150x150Logo.png",
      "icons/Square284x284Logo.png",
      "icons/Square310x310Logo.png"
    ]
  }
}
